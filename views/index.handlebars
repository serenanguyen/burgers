<div class="container text-center">
  <h1>Burgers All Day</h1>
  <div class="row">
    <div class="col-md-6">
      <h2>Burgers</h2>
      {{#each burgers}}
        {{#unless this.devoured}}
          <p>
            {{this.burger_name}}
            <form action="/{{this.id}}?_method=PUT" method="POST" class="button-size">
                <input type="hidden" name="devour" value="true">
                <button type="submit">Devour</button>
            </form>
          </p>
        {{/unless}}
      {{/each}}
    </div>

    <div class="col-md-6">
      <h2>Eaten Burgers.</h2>
      {{#each burgers}}
        {{#if this.devoured}}
          <p>
            {{this.burger_name}}
          </p>
        {{/if}}
      {{/each}}
    </div>
  </div>


  <h2>Add a Burger</h2>
  <form method="POST" action="/" class="create-update-form">
  	<input type="text" name="burger_name">
  	<button type="submit">Add Burger!</button>
  </form>
</div>
